{
  "$schema": "https://schema.up.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python3", "nodejs"]
        },
        "pip:install": {
          "dependsOn": ["setup"],
          "cmds": ["pip install -r requirements.txt"]
        },
        "npm:install": {
          "dependsOn": ["setup"],
          "cmds": ["npm ci"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn dsdamembership.wsgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
